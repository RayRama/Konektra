<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.tts.TextToSpeechActivity">

    <!-- Top Bar -->
    <RelativeLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="85dp">

        <!-- Tombol Back -->
        <Button
            android:id="@+id/btnBack"
            android:layout_width="50dp"
            android:layout_height="45dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="@drawable/baseline_arrow_back_ios_new_24"
            android:padding="8dp" />

        <!-- Tulisan "Speech To Text" -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/tts"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- Tombol History -->
<!--        <Button-->
<!--            android:id="@+id/btnHistory"-->
<!--            android:layout_width="50dp"-->
<!--            android:layout_height="45dp"-->
<!--            android:layout_alignParentEnd="true"-->
<!--            android:layout_centerVertical="true"-->
<!--            android:background="@drawable/history"-->
<!--            android:padding="8dp" />-->

    </RelativeLayout>

    <!-- Deskripsi Scrollable -->
    <ScrollView
        android:id="@+id/descriptionScrollView"
        android:layout_width="match_parent"
        android:layout_height="538dp"
        android:layout_above="@id/bottomBar"
        android:layout_below="@id/topBar"
        android:layout_marginBottom="-5dp">

        <EditText
            android:id="@+id/EdText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:hint="@string/long_description"
            android:textSize="16sp" />
    </ScrollView>

    <RelativeLayout
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true">

        <!-- Tombol Hapus -->
        <Button
            android:id="@+id/btnHapus"
            android:layout_width="40dp"
            android:layout_height="46dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="27dp"
            android:background="@drawable/trash"
            android:backgroundTint="@color/white"
            android:padding="8dp"
            android:textColor="@color/urianBlue" />

        <!-- Tombol Mic -->
        <Button
            android:id="@+id/speakButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="84dp"
            android:layout_marginEnd="76dp"
            android:layout_toStartOf="@+id/btnSimpan"
            android:layout_toEndOf="@+id/btnHapus"
            android:background="@drawable/voice"
            android:padding="8dp" />

        <!-- Tombol Simpan -->
        <Button
            android:id="@+id/btnSimpan"
            android:layout_width="46dp"
            android:layout_height="49dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="26dp"
            android:background="@drawable/save"
            android:padding="8dp" />

    </RelativeLayout>


</RelativeLayout>